mtz_abecedario = [['A','B','C','D','E','F'],
                  ['G','H','I','J','K','L'],
                  ['M','N','Ã‘','O','P','Q'],
                  ['R','S','T','U','V','W'],
                  ['X','Y','Z','CH','LL','RR']]
dato = 0
mtz_completar = [['ğŸ•³','ğŸ•³','ğŸ•³','ğŸ•³','ğŸ•³','ğŸ•³'],
                  ['ğŸ•³','ğŸ•³','ğŸ•³','ğŸ•³','ğŸ•³','ğŸ•³'],
